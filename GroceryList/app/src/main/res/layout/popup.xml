<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/enter_grocery_item"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/enterItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tile"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/enter_grocery"
                android:importantForAutofill="no"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/enterQtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enterItem"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/quantity"
                android:importantForAutofill="no"
                tools:ignore="TextFields" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enterQtt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="#E53935"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/save"
                android:textSize="16sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>